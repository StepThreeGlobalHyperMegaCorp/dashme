    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dashme: Your personal dashboard!</title>

    <!-- Bootstrap core CSS -->
    <link href="bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
