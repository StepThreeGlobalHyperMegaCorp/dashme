  <body>
  &nbsp;
  <div class="container">
    <div class="jumbotron">
      <h1>DashMe</h1>
      <p>Get funky twice a week for good health.</p>
    </div>

    <div class="row">
      <div class="col-lg-6">
	<form action="/">
          <div class="form-group">
	    <input id="username"
                   type="text"
                   class="form-control"
                   placeholder="Fat Bastard"
                   value="<%= username %>"
                   name="name">
          </div>
          <div class="form-group">
	    <input type="text" class="form-control" placeholder="630" name='weight'>
          </div>
	  <button class="btn btn-primary btn-lg" type="submit">Save!</button>
	</form>
        <hr/>
	Keys and values:
        <pre>
<%= JSON.stringify(keys, null, 2) %>
        </pre>
      </div><!-- /.col-lg-6 -->
      <div class="col-lg-6">
        <button id="set-location-btn"
                data-loading-text="Setting..."
                class="btn btn-info">Set Current Location as "Work"</button>
        <button id="post-cur-location-btn"
                data-loading-text="Posting..."
                class="btn btn-info">Post Current Location</button>
        <canvas id="myChart" width="400" height="400"></canvas>
      </div>
    </div>

  </div>

  <script src="jquery/dist/jquery.min.js"></script>
  <script src="bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="Chart.js/Chart.js"></script>
  <script src="home.js"></script>
  <script>
    var g_username = "<%= username %>";
  </script>
</body>
</html>
